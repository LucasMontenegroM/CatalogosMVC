﻿@using CatalogosMVC.Business.Models
@model ListModel


@{
    ViewData["Title"] = "Adicionar Usuário";
}


<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center ">

        <h1 class="text-light">Cadastro de Perfil</h1>

    </div>

    <form method="post" asp-controller="Users" asp-action="CreateUser">
        <!--NOME-->
        <div class="mb-3">
            <label for="Name" class="form-label text-light">Nome do Usuário:</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Digite o nome do Usuário :">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!--BOTÃO-->
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar <i class="bi bi-pen mx-2"></i> </button>
            <a class="btn btn-primary w-50" asp-controller="Users" asp-action="Index">Voltar <i class="bi bi-arrow-return-left" mx-2></i></a>

        </div>

    </form>
</div>