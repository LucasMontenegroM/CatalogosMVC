@using CatalogosMVC.Business.Models
@model List<UserModel>

<div>
    <a class="btn btn-success btn-success btn-lg mt-1 mb-3" asp-controller="Users" asp-action="Create">Cadastrar novo Usuário</a>
</div>

<div class="row">       
    @foreach (var user in Model)
    {    
        <div class="col-md-4 mb-4">           
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">@user.Name</h5>
                    <p class="card-text">Opções de usuário:</p>
                    <a asp-controller="Books" asp-action="Index" asp-route-userId="@user.Id" class="btn btn-primary"> Catálogo</a>
                    <a asp-controller="Users" asp-action="Update" asp-route-id="@user.Id" class="btn btn-warning">Editar</a>
                    <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id"  class="btn btn-danger">Excluir</a>
                </div>
            </div>
        </div>
    }
</div>

