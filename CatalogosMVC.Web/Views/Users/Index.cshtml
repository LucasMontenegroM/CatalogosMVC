@using CatalogosMVC.Business.Models
@model List<UserModel>

<div>
    <a class="btn btn-success btn-success btn-lg mt-1 mb-3" asp-controller="Users" asp-action="CreateUser">Cadastrar novo Usuário</a>
</div>

<div class="row">       
    @foreach (var user in Model)
    {    
        <div class="col-md-4 mb-4">

            
           
                    <div class="card bg-dark text-white">
                        <div class="card-body">
                            <h5 class="card-title">@user.Name</h5>
                            <p class="card-text">Opções de usuário:</p>
                            <a class="btn btn-primary" @* asp-controller="Users" asp-action="" asp-route-id="" *@>Catalogo</a>
                            <a asp-controller="Users" asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Users" asp-action="DeleteUser" asp-route-id="@user.Id"  class="btn btn-danger">Excluir</a>
                        </div>
                    </div>
            </div>
    }
</div>

